
extend type Query {
    seller(id: ID!): Seller
    sellers(limit: Int!, offer: Int!): [Seller!]
}

extend type Mutation {
    createSeller(input: NewSeller!): Seller!
}

input NewSeller {
    title: String!
    slug: String
    description: String!
}

type Seller {
    id: ID!
    title: String!
    slug: String!
    description: String!
}
